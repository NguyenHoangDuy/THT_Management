@model THT.Models.Master_Announcement

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jarviswidget">
    <div class="row">
        <!-- NEW COL START -->
        <article class="col-sm-12">
            <div class="widget-body">
                <div id="content">
                    <div id="title-article" style="margin-bottom:10px">
                        <h4><b>@Model.Title</b></h4>
                    </div>
                    <div style="margin-bottom:10px">
                        @Model.CreatedAt | @Model.CreatedBy
                    </div>
                    <div>@Html.Raw(Model.HTMLBody)</div>
                </div>
                </div>
            </article>
        </div>
</div>
<script>
    $(document).ready(function () {
        document.title = "Trang chủ";
        var headerH = $('#content').height();
        $('#content').css({ 'height': $(window).height() - 100 });
    });
    
</script>
                

